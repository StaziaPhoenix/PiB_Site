<% include ../partials/head %>
<% include ../partials/header %>
<link rel='stylesheet' type='text/css' href='/css/native/show.css'>


<div class='page-content'>

	<div class='container'>
		<!-- ROW: DESCRIPTION AND MEDIA GALLERY -->
		<div class='columns'>
			<div class='column col-xs-12 col-sm-12 col-md-12 col-lg-11 col-xl-9 col-mx-auto project-info-and-media'>
			<!-- project-info-and-media is a flex box containing project-info and media-gallery -->

				<!-- PROJECT DESCRIPTION -->
				<div class='project-info p-2'>
					<div class='page-header'>
						<div class='h1 text-uppercase page-header-title'>
							<%= project.name %>
						</div>
						<p class='text-gray'>
							<%= project.creators %>
							<span class='float-right'>
								<button class='btn btn-primary c-auto'>
									<i class='icon icon-download'></i>
								</button>
								<%= project.downloadCount %> Downloads
							</span>
						</p>
					</div>

					<div class='project-description text-justify'>
						<h5>Description</h5>
						<p><%= project.description %></p>
					</div>
				</div>

				<!-- MEDIA GALLERY -->
				<div class='media-gallery'>
					<i class='icon icon-arrow-left m-2'></i>
					<img src='<%= project.mainImage %>'>
					<i class='icon icon-arrow-right m-2'></i>
				</div><!-- END MEDIA-GALLERY -->

			</div> <!-- END PROJECT-INFO-AND-MEDIA -->
		</div>

		<!-- ROW: SKILLS LEARNED AND RELATED PROJECTS -->
		<div class='columns'>
			<div class='column col-xs-12 col-sm-12 col-md-12 col-lg-11 col-xl-9 col-mx-auto skills-and-related-projects'>
				<div class='columns m-2'>
					<div class='column col-xs-12 col-sm-12 col-6 skills-learned'>
						<h5>Skills Learned</h5>
						<ul>
							<% project.skillsLearned.forEach(function(skill) { %>
								<li><%= skill %></li>
							<% }); %>
						</ul>
					</div>

					<div class='column col-xs-12 col-sm-12 col-6 related-projects'>
						<h5>Related Projects</h5>
						<ul>
							<% relatedProjects.forEach(function(project) { %>
								<li><a href='/projects/<%= project._id %>'><%= project.name %></a></li>
							<% }); %>
						</ul>
					</div>
				</div>
			</div>
		</div>


		<!-- BUILD IT BUTTON -->
		<div class='columns'>
			<div class='column col-xs-12 col-sm-12 col-md-12 col-lg-11 col-xl-9 col-mx-auto'>
				<div class='btn btn-primary m-2'>Build It</div>
			</div>
		</div>
	</div>

</div>
<% include ../partials/footer %>